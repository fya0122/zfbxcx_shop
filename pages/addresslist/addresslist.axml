      </view>
      <view class="oper-block">
        <image src="../../resources/icon/smallIco/delete.png" class="oper-ico"/>
        <view class="display-words" onTap="deleteMe">删除</view>
      </view>
    </view>
  </view>
  <view class="address-outter">
    <view class="address-info">
      <view class="address-line">
        <view>fya0122</view>
        <view>18730930122</view>
      </view>
      <view class="address-desc">河北省石家庄市桥西区啊啊啊啊啊啊啊</view>
    </view>
    <view class="operator">
      <view class="set-default">
        <label style="display: flex;align-items: center;">
          <radio/>设置默认
        </label>
      </view>
      <view class="oper-block">
        <image class="oper-ico" src="../../resources/icon/smallIco/modify.png"/>
        <view class="display-words">编辑</view>
      </view>
      <view class="oper-block">
        <image src="../../resources/icon/smallIco/delete.png" class="oper-ico"/>
        <view class="display-words" onTap="deleteMe">删除</view>
      </view>
    </view>
  </view>
</radio-group>
