<radio-group onChange="selectradioaddress">
  <view class="address-outter">
    <view class="address-info">
      <view class="address-line">
        <view>fya0122</view>
        <view>18730930122</view>
      </view>
      <view class="address-desc">河北省石家庄市桥西区啊啊啊啊啊啊啊</view>
    </view>
    <view class="operator">
      <view class="set-default">
        <!-- <label>
          <radio style="width: 30rpx;height: 30rpx"/>设置默认
        </label> -->
        <label style="display: flex;align-items: center;">
          <radio/>设置默认
        </label>
      </view>
      <view class="oper-block" onTap="goToAddress">
        <image class="oper-ico" src="../../resources/icon/smallIco/modify.png"/>
